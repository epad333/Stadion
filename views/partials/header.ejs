<!DOCTYPE html>
<html>
    <head>
        <title>Stadion</title>
        <link rel = "icon" href = "/Images/soccer-ball-icon.png">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel ="stylesheet" href= "/stylesheets/main.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    </head>
    <body>
        




<!-- THE NAVBAR -->
<nav class="navbar navbar-expand-lg  navbar-light bg-light mb-3">
  
  <a class="navbar-brand" href="/"><i class="icon fas fa-futbol"></i> Stadion</a>

  <!-- THE COLLAPSABLE MENU BUTTON -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- EVERYTHING THAT GETS COLLAPSED -->
  <div class="collapse navbar-collapse"id="navbarSupportedContent">
   
  <ul class="nav navbar-nav">
    <li class="nav-item <%= typeof page !== 'undefined' && page === 'stadiums' ? 'active' : '' %>">
      <a class= "nav-link" href="/stadiums"><i class="icon fas fa-home"></i>  Home</a>
    </li>
  </ul>
   
   
    <ul class="navbar-nav ml-auto">
      <% if(!currentUser){ %>

      
      
    <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
      <a class= "nav-link" href="/login"><i class="icon fas fa-user"></i>  Login</a>
    </li>

     
      
    <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
      <a class = "nav-link" href="/register"><i class="icon fas fa-user-plus"></i>  Sign Up</a>
    </li>

 
      
      <% }else{ %>
      
      
      
      <li class ="nav-item">
        <a class = "nav-link" href="#">Signed In As <%= currentUser.username %></a>
        
      </li>
      
    
      <li class="nav-item">
        <a class="nav-link" href="/logout"><i class="fas fa-user-slash"></i>  Logout </a>
      </li>
      
      <% } %>

    
    </ul>

    </div>
</nav>




<div class = "container">
  
  
  <% if(error && error.length >0){ %>
  <div class = "alert alert-danger text-center" role= "alert"><%=error%></div>
  
  <% } %>
  <% if(success && success.length >0){ %>
    <div class = "alert alert-success text-center" role= "alert"><%=success%></div>
  <% } %>

        
        
        
