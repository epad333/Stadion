<% include ../partials/header %>


    
        
        <div class = "jumbotron text-center">
            
            <h1> Welcome to Stadion</h1>
            <p>View and review soccer stadiums from all over the world</p>
            <p>
                <a class = "new-stadium btn btn-lg" href = "/stadiums/new">Add new Stadium</a>
            </p>
            
            
            
            </div>

    
    <div class = "row text-center" style ="display:flex; flex-wrap: wrap;">
       <% stadiums.forEach(function(stadium){ %>
            
            <div class = "col-md-3 col-sm-6 mb-3">
                   <div id = "thumbnail" class = "img-thumbnail">
                   
                        <img src= "<%=stadium.image%>" class="stadium-image img-fluid mb-2" alt="Responsive image">
                        <div class = "caption">
                            <h4><%=stadium.name   %></h4>
                            <% if (stadium.rating === 0) { %>
                            <em>No reviews yet.</em>
                            <% } else { %>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star <% if (stadium.rating > 1.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (stadium.rating > 2.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (stadium.rating > 3.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (stadium.rating > 4.5) { %> checked <% } %>"></span>
                            <% } %>
                        </div>
                        
                        
                        <p class = "mb-2">
                            <a href="/stadiums/<%= stadium._id%>" class= "btn more-info mt-2"><i class="fas fa-info-circle"></i>  More Info</a>
                        </p>
                   </div>
                   
            </div>
        <% }); %>
    </div>
    
    
    
    
    
        



<% include ../partials/footer  %>